extends layout 

block content 
  h1 To Upload Image on mongoDB
  hr
  div 
    form(method="POST" action='/shop/image' enctype="multipart/form-data")
      div.form-group
        label(for="name") Name: 
        input(type='text' id='name' placeholder='Image Name' value='' name='name' required='true')
      div.form-group
        label(for='desc') Description:
        textarea(id='desc' name='desc' value='' rows='2' placeholder='Description' required='true')
      div.form-group
        label(for='image') Upload Image: 
        input(type='file' id='image' name='image' value='' required='true')
      button(type='submit') Submit
  hr
  h1 Uploaded Images
  div
    each image in items
      div
        img(src=`data:image/${image.img.contentType};base64, ${image.img.data.toString('base64')}`)
        div
          h5= image.name
        div
          p= image.desc